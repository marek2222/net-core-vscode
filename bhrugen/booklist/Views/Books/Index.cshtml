@model IEnumerable<booklist.Models.Book>

  @{
    ViewData["Title"] = "Index";
  }
  <br>
  <h3>Lista książek</h3>
  <hr>
  <p>
    <a asp-action="Create" class="btn btn-sm btn-primary">Nowy</a>
  </p>
  
  <table class="table">
    <thead>
      <tr>
        <th>
          @Html.DisplayNameFor(m => m.Name)
        </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in Model) {
      <tr>
        <td>
          @Html.DisplayFor(m => item.Name)
        </td>
        <td>
          <a asp-action="Edit"    asp-route-id="@item.Id" class="btn btn-sm btn-success">Edycja</a> |
          <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Szczegóły</a> |
          <a asp-action="Delete"  asp-route-id="@item.Id" class="btn btn-sm btn-danger">Usuwanie</a>
        </td>
      </tr>
      }
    </tbody>
  </table>